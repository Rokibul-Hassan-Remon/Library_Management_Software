@model Staff

@{
	ViewData["title"] = "Staff";
}

<h1>Staff details</h1>
<hr />

<dl class="row">
	<dt class="col-sm-2">
		Staff Id :
	</dt>
	<dd class="col-sm-10">
		@Model.StaffId
	</dd>

	<dt class="col-sm-2">
		Staff Name :
	</dt>
	<dd class="col-sm-10">
		@Model.StaffName
	</dd>

	<dt class="col-sm-2">
		Position :
	</dt>
	<dd class="col-sm-10">
		@Model.StaffPosition 
	</dd>
</dl>


<a class="btn btn-primary" asp-action="Index">back to List</a>
<a class="btn btn-primary" asp-action="Update" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>