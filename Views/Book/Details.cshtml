@model Book

@{
	ViewData["title"] = "Book";
}

<h1>Books details</h1>
<hr />

<dl class="row">
	<dt class="col-sm-2">
		Book Id :
	</dt>
	<dd class="col-sm-10">
		@Model.Id
	</dd>

	<dt class="col-sm-2">
		Book Name :
	</dt>
	<dd class="col-sm-10">
		@Model.Title
	</dd>

	<dt class="col-sm-2">
		Author :
	</dt>
	<dd class="col-sm-10">
		@Model.Auther
	</dd>

	<dt class="col-sm-2">
		ISBN :
	</dt>
	<dd class="col-sm-10">
		@Model.ISBN
	</dd>
</dl>


<a class="btn btn-primary" asp-action="Index">back to List</a>
<a class="btn btn-primary" asp-action="Update" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>