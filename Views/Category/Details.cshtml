@model Category

@{
	ViewData["title"] = "Category";
}

<h1>Category details</h1>
<hr />

<dl class="row">
	<dt class="col-sm-2">
		Category Id :
	</dt>
	<dd class="col-sm-10">
		@Model.Id
	</dd>

	<dt class="col-sm-2">
		Category Name :
	</dt>
	<dd class="col-sm-10">
		@Model.Name
	</dd>

	<dt class="col-sm-2">
		Category Descriptioin:
	</dt>
	<dd class="col-sm-10">
		@Model.Description
	</dd>

	<dt class="col-sm-2">
		Category CreatedDate :
	</dt>
	<dd class="col-sm-10">
		@Model.CreatedDate
	</dd>
</dl>


<a class="btn btn-primary" asp-action="Index">back to List</a>
<a class="btn btn-primary" asp-action="Update" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>