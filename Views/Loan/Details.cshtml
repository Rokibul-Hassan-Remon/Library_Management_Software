@model Loan

@{
	ViewData["title"] = "Loan";
}

<h1>Loan details</h1>
<hr />

<dl class="row">
	<dt class="col-sm-2">
		Loan Id :
	</dt>
	<dd class="col-sm-10">
		@Model.Id
	</dd>

	<dt class="col-sm-2">
		Loan MemberId :
	</dt>
	<dd class="col-sm-10">
		@Model.MemberId
	</dd>

	<dt class="col-sm-2">
		BookId :
	</dt>
	<dd class="col-sm-10">
		@Model.BookId
	</dd>

	<dt class="col-sm-2">
		Loan DueDate :
	</dt>
	<dd class="col-sm-10">
		@Model.DueDate
	</dd>
</dl>


<a class="btn btn-primary" asp-action="Index">back to List</a>
